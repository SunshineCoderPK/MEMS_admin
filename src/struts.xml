<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.objectFactory" value="spring" />
	<package name="basicstruts2" extends="struts-default">
		<interceptors>
			<!-- 注册拦截器 -->
			<interceptor name="MemsLoginInterceptor"
				class="com.kaipan.mems.web.interceptor.MemsLoginInterceptor">
				<param name="excludeMethods">login</param>
			</interceptor>
			<!-- 拦截器栈 -->
			<interceptor-stack name="myStack">
				<interceptor-ref name="MemsLoginInterceptor" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>
		
		<!-- 指定默认栈 -->
		<default-interceptor-ref name="myStack" />
		<global-results>
			<result name="login">/login.jsp</result>
		</global-results>
		
		<!-- 需要进行权限控制的页面访问 -->
		<action name="page_*_*">
			<result name="success" type="dispatcher">/WEB-INF/pages/{1}/{2}.jsp
			</result>
		</action>
		<action name="adminAction_*" class="adminAction" method="{1}">
		</action>
		<action name="adminAction_login" class="adminAction" method="login">
			<result name="admin" type="redirect">adminAction_adminIndex</result>
			<result name="super" type="redirect">adminAction_superIndex</result>
			<result name="login">/login.jsp</result>
		</action>
		<action name="adminAction_adminIndex" class="adminAction" method="adminIndex">
		    <result name="home">/WEB-INF/pages/common/adminIndex.jsp</result>
		</action>
		<action name="adminAction_superIndex" class="adminAction" method="superIndex">
		    <result name="home">/WEB-INF/pages/common/superIndex.jsp</result>
		</action>
		<action name="adminAction_logout" class="adminAction" method="logout">
		    <result name="login">/login.jsp</result>
		</action>
		<action name="adminAction_admininfoDetail" class="adminAction" method="admininfoDetail">
		    <result name="detail">/WEB-INF/pages/super/admininfoDetail.jsp</result>
		</action>
		<action name="adminAction_changeAdmin" class="adminAction" method="changeAdmin">
		    <result name="change">/WEB-INF/pages/super/signadmin.jsp</result>
		</action>
		<action name="userAction_userinfo" class="userAction" method="userinfo">
			<result name="success">/WEB-INF/pages/user/userinfo.jsp</result>
		</action>	
		<action name="annocementAction_*" class="annocementAction" method="{1}">
			<result name="list">/WEB-INF/pages/portal/gonggao.jsp</result>
		</action>
		<action name="uploadimageAction_uploadimg" class="com.kaipan.mems.web.action.UploadimageAction" method="uploadimg">
        </action>
        <action name="expenseTypeAction_expenseTypeinfo" class="expenseTypeAction" method="expenseTypeinfo">
		</action>
		<action name="medicalItemAction_*" class="medicalItemAction" method="{1}">
		</action>
		<action name="hospitalAction_*" class="hospitalAction" method="{1}">
		</action>
		<action name="medicineAction_*" class="medicineAction" method="{1}">
		</action>
		<action name="expenseAction_historyExpenseInfo" class="expenseAction" method="historyExpenseInfo">
		</action>
		<action name="expenseAction_*" class="expenseAction" method="{1}">
		     <result name="detail">/WEB-INF/pages/expenses/expensedetail.jsp</result>
		</action>
	</package>
</struts>